{% extends "pop_up_base.html" %}

{% block content %}
	<div id="control_bar">
		<a class="contact_new_popup" link="{%url contact_new_popup %}" href="#">NEW CONTACT</a>
		<form method = "GET" action="">
			<label for = "search">Search: {{form.search}}</label>
			<input type = "submit" value = "search"/>
		</form>

	</div>
	{% if list %}
	<div id="list">
		<table id="{{contact_type}}">
			<tr>
				<th>Fist Name</th>
				<th>Last Name</th>
				<th>Company</th>
				<th>Email</th>
			</tr>
		{% for i in list %}
		<tr class="link"
			contact_id="{{i.id}}"
			contact_company="{{i.company}}"
			contact_name="{{i.firstname}} {{i.lastname}}"
			contact_title="{{i.title}}"
			contact_address_line1="{{i.primary_address_line1}}"
			contact_address_line2="{{i.primary_address_line2}}"
			contact_city="{{i.primary_city}}"
			contact_state="{{i.primary_state}}"
			contact_post_code="{{i.primary_post_code}}"
			contact_land_line="{{i.land_line}}"
			link="#">
				<td>{{i.firstname}}</td>
				<td>{{i.lastname}}</td>
				<td>{{i.email}}</td>
			</tr>
		{% endfor %}
		</table>
	</div>
	{% else %}
	<p>Search to find a Contact</p>
	{% endif %}
{% endblock %}
